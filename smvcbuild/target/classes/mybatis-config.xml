<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!--核心配置文件，从官方文档复制来的-->
<configuration>
<!--配置数据源，交给spring去做-->
    <typeAliases>
<!--让实体包下面自动取别名-->
        <package name="com.xie.pojo"/>
    </typeAliases>
    <mappers>
        <mapper class="com.xie.dao.BookMapper"/>
    </mappers>
</configuration>